<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "WebSite",
  "name": "<%= config.title %>",
  "alternateName": "<%= config.title %>",
  "url": "<%= config.url %>"
}
</script>

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Blog",
    "name": "<%= config.title %>",
    "about": "<%= config.description %>",
    "audience": {
      "@type": "Audience",
      "audienceType": "Developers, inform√°ticos, programadores"
    },
    "author": {
      "@type": "Person",
      "name": "{{ config.owner.name }}", 
      "url" : "<%= config.url %>",
      "sameAs" : [
        "https://www.facebook.com/{{ config.owner.facebook }}",
        "https://www.twitter.com/{{ config.owner.twitter }}",
        "https://www.linkedin.com/in/{{ config.owner.linkedin }}",
        "https://plus.google.com/+{{ config.owner.google.plus }}",
        "http://stackoverflow.com/users/{{ author.stackoverflow }}"
      ]
    },
    "creator": {
      "@type": "Person",
      "name": "{{ config.owner.name }}",
      "url" : "{{ config.url }}",
      "sameAs" : [
        "https://www.facebook.com/{{ config.owner.facebook }}",
        "https://www.twitter.com/{{ config.owner.twitter }}",
        "https://www.linkedin.com/in/{{ config.owner.linkedin }}",
        "https://plus.google.com/+{{ config.owner.google.plus }}",
        "http://stackoverflow.com/users/{{ author.stackoverflow }}"
      ]
    },
    "headline": "<%= config.title %>",
    "inLanguage": "es-ES",
    "url": "<%= config.url %>",
    "blogPost": {
      "@type": "BlogPosting",
      "articleBody": <%= page.content %>,
      "wordCount": "{{content | number_of_words}}",
      "mainEntityOfPage": "<%- canonical %>",
      "headline": "<%= page.title %>",
      "datePublished": "<%- date_xml(page.date)  %>",
      "dateModified": "<%- date_xml(page.modified)  %>",
      "description": "<%= page.description %>",
      "url": "<%- canonical %>",
      "image": {
        "@type": "ImageObject",
        "url": "<%- page.image ? page.image : 'default'%>"
        "width": 640, <!-- TODO calcular la real -->
        "height": 435
      },
      "author": {
        "@type": "Person",
        "name": "{{ author.name }}", <!-- TODO -->
        "url" : "<%- config.url %>",
        "sameAs" : [
          "https://www.facebook.com/{{ author.facebook }}",
          "https://www.twitter.com/{{ author.twitter }}",
          "https://www.linkedin.com/in/{{ author.linkedin }}",
          "https://plus.google.com/+{{ author.google.plus }}",
          "http://stackoverflow.com/users/{{ author.stackoverflow }}"
        ]
      },
      "publisher": {
        "@type": "Organization",
        "name": "<%- config.title %>",
        "url": "<%- config.url %>",
        "logo": {
          "@type": "ImageObject",
          "url": "<%- config.url %>/assets/img/bio-photo.png",
          "width": 150
        },
        "sameAs" : [
          "https://www.facebook.com/elbauldelprogramador",
          "https://www.twitter.com/elbaulp",
          "https://plus.google.com/+elbauldelprogramador"
        ]
      }
    }
  }
</script>