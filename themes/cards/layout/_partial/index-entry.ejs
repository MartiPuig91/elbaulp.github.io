<article class="box-item post-<%- post.mainclass %> shown">
  <span class="ribbon">
    <!--<% if (post.categories && post.categories.length) { %>
        <%- partial('post/categories', {categories: post.categories}) %>
        <% } else { %>
        <%- __('uncategorized') %>
        <% } %>-->
    <a href="<%- site.url %>/category/<%- post.mainclass %>"><span><%- post.mainclass %></span></a>
  </span>
  <div class="box-body">
    <time datetime="<%- date_xml(post.date) %>" class="date"><%- date(post.date, 'D MMMM YYYY') %></time>
    <a class="post-link" href="<%- url_for(post.path) %>">
      <h2 class="post-title"><%= post.title %></h2>
    </a>
    <a class="post-link" href="<%- url_for(post.path) %>">
      <p class="description">
        <%- post.excerpt || __('no_excerpt') %>
        <% if (post.introduction) {%>
        <%= post.introduction %>
        <% } %>
      </p>
    </a>
    <div class="tags">
      <% if (post.tags && post.tags.length) { %>
      <%- partial('post/tags', {tags: post.tags, tagHash: false}) %>
      <% } else { %>
      <div class="untagged"><%- __('untagged') %></div>
      <% }  %>
      <!--{% for tag in post.tags limit:3 %}
          <a href="{{site.baseurl}}/tags/#{{tag | slugify }}">{{ tag }}</a>
          {% endfor %}-->
    </div>
  </div>
</article>
