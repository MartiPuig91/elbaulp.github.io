.share
    center(800px)
    text-align center
    border-top 1px solid lightGray
    padding-top rem(20px)
    display flex
    justify-content center
    article &
        border-top none
    svg
        margin rem(15px)
        size(35,35)
        +below(cut)
           size(16,16)
    a
        text-decoration none
        border none

.author .share
    center(800px)
    text-align center
    border-top 1px solid lightGray
    padding-top rem(20px)
    article &
        border-top none
    a
        text-decoration none
        border none

.subscribe
    position fixed
    top 10px
    z-index 17
    right rem(90px)
    min-height rem(40px)
    a
      text-decoration none
    svg
       margin 0 rem(8px)
       size(32,32)
    +below(cut)
       display none
        
