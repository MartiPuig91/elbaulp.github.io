.post-content
    .tags
        margin-top rem(30px)
        a
            font-size rem(14px)
            color main
            display inline-block
            border 1px solid main
            border-radius rem(5px)
            padding rem(4px) rem(10px)
            margin-right rem(2px)
            margin-bottom rem(8px)
            text-decoration none
            &:hover
                color darken(main, 40%)
                border 1px solid darken(main, 40%)
                background #fff

.img-rounded
    border-radius 50%

.google-ads
    max-width rem(800px)
    margin 0 auto
    #ad-slot
        max-width rem(300px)
        margin 0 auto
    p,ul li
      font-size rem(13px)
      margin 0


.image-credit,figcaption
    center(rem(800px))
    text-align right
    font-style italic;
    font-size rem(10px)
    margin-top rem(5px)
    a.externalLink:after
        display none

.paginator-container
    width rem(800px)
    text-align center
    margin 0 auto
    .paginator
      display flex
      flex-flow row nowrap
      a
        flex auto
        text-decoration none
        font-size rem(50px)
        color main

.near-posts
    center(rem(800px))
    text-align center
    display flex
    flex-flow row nowrap
    align-items center
    .post-item
      flex 1 1 rem(10px)
      font-size rem(12px)
